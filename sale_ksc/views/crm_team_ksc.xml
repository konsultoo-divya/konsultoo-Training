<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="form_view_crm_team_ksc" model="ir.ui.view">
        <field name="name">form.view.crm.team.ksc</field>
        <field name="model">crm.team.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="team_leader_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tree_view_crm_team_ksc" model="ir.ui.view">
        <field name="name">tree.view.crm.team.ksc</field>
        <field name="model">crm.team.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="team_leader_id"/>
            </tree>
        </field>
    </record>
    <record id="search_view_crm_team_ksc" model="ir.ui.view">
        <field name="name">search.view.crm.team.ksc</field>
        <field name="model">crm.team.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="team_leader_id"/>
            </search>
        </field>
    </record>
    <record id="action_crm_team_ksc" model="ir.actions.act_window">
        <field name="name">action.crm.team.ksc</field>
        <field name="res_model">crm.team.ksc</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">EMPLY!!!</p>
        </field>
    </record>

    <menuitem id="menu_CRM" parent="ksc_sale_menu" name="CRM"/>
    <menuitem id="menu_ksc_crm_team" parent="menu_CRM" action="action_crm_team_ksc" name="Sales Team "/>
</odoo>